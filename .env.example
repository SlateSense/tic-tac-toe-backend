# Backend environment variables for Tic-Tac-Toe
# Prefer BACKEND_PORT locally to avoid React dev server conflicts
BACKEND_PORT=4000
PORT=
# Real integration
SPEED_WALLET_SECRET_KEY=
SPEED_WALLET_WEBHOOK_SECRET=
ALLOWED_ORIGIN=*

# Optional: Override Speed API base URLs (leave unset to use defaults)
# Default base: https://api.tryspeed.com
SPEED_API_BASE=
SPEED_WALLET_API_BASE=

# Optional local log forwarding (mirrors Sea Battle behavior)
# If enabled, the server will POST JSON logs to your local PC endpoint
# and also save a copy to backend/forwarded-logs/*.json
LOG_FORWARDING_ENABLED=false
LOCAL_LOG_ENDPOINT=http://localhost:3001/logs
